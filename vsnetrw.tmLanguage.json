{
  "scopeName": "source.vsnetrw",
  "patterns": [
    {
      "include": "#gitStatus"
    },
    {
      "include": "#directory"
    },
    {
      "include": "#hidden"
    }
  ],
  "repository": {
    "directory": {
      "match": ".*/$",
      "name": "keyword"
    },
    "hidden": {
      "match": "(^|/)\\.[^/]*/?$",
      "name": "comment"
    },
    "gitStatus": {
      "match": "\\s+(M|A|D|U|R|C)$",
      "name": "markup.inserted",
      "captures": {
        "1": {
          "name": "constant.language"
        }
      }
    }
  }
}