{
  "scopeName": "source.vnerdtree",
  "patterns": [
    {
      "include": "#help"
    },
    {
      "include": "#bookmarkSeparator"
    },
    {
      "include": "#bookmark"
    },
    {
      "include": "#gitStatus"
    },
    {
      "include": "#directory"
    },
    {
      "include": "#hidden"
    }
  ],
  "repository": {
    "help": {
      "match": "^(vnerdtree|.*:.*)$",
      "name": "comment"
    },
    "bookmark": {
      "match": "^\\[[^\\]]+\\]\\s+.*$",
      "name": "comment"
    },
    "bookmarkSeparator": {
      "match": "^-- BOOKMARKS --$",
      "name": "comment"
    },
    "directory": {
      "match": ".*/$",
      "name": "keyword"
    },
    "hidden": {
      "match": "(^|/)\\.[^/]*/?$",
      "name": "comment"
    },
    "gitStatus": {
      "match": "\\s+(M|A|D|U|R|C)$",
      "name": "markup.inserted",
      "captures": {
        "1": {
          "name": "constant.language"
        }
      }
    }
  }
}